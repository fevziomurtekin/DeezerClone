<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ToolbarStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="deezer_bold_text_white">
        <item name="android:textColor">@color/colorWhiteCard</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-black"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="deezer_normal_text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="deezer_thin_text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-thin"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>